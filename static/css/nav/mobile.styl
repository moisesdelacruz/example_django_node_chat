nav
  background black
  margin 0
  padding .3em
  border-bottom 1px solid black_border
  box-shadow black_border 0 1px 15px
  h1
    font-size 18px
    font-weight normal
    margin 0
    margin-right 1em
    padding .8em 0
    a
      color gray
      cursor pointer
      text-decoration none
      &:hover
        color white

.Menu-container
  display flex
  justify-content space-between
  z-index 2

.Menu
  display none
  margin 0
  padding 0
  align-items center
  list-style none
  position absolute
  top 3.4em
  right 0
  background-color black
  padding 1em
  border-radius 3px

  .item > a
    text-decoration none
    color gray
    cursor pointer
    font-size 16px
    padding .8em .5em
    display block
    text-align right
    &:hover
      color white
  .userItem
    line-height 2
    span:first-child
      margin 0 .5em
    span:last-child
      display none

.Logo-content
  display flex
  align-items center
  ul
    display none

// icon menu
.iconMenu
  display inline-block
  cursor pointer
  margin auto .5em

.bar1, .bar2, .bar3
  background-color white
  border-radius 2px
  height 5px
  margin 6px 0
  transition 0.4s
  width 35px

.change .bar1
  -webkit-transform rotate(-45deg) translate(-9px, 6px)
  transform rotate(-45deg) translate(-9px, 6px)

.change .bar2
  opacity 0

.change .bar3
  -webkit-transform rotate(45deg) translate(-8px, -8px)
  transform rotate(45deg) translate(-8px, -8px)

.user-drowdown
  background white
  border 1px solid black_border
  border-radius 5px
  display none
  position absolute
  padding .5em
  list-style none
  // top 4em
  right 0
  z-index 1
  li
    padding .3em .5em
    text-align left
    a
      color black_text
      display flex
      span
        line-height 1.8
        margin-left .3em

.show
  display block
