.image
  margin .5em 0
  display flex
  img
    width 100%
    margin 0 auto

.data-theme
  padding 5px
  border-bottom 1px solid black_border
  max-width 500px
  margin 1em auto

.form-theme
  display block
  textarea
    display flex
    margin 1em 0
    height 7em
    width calc(100% - .5em)
  label
    color black_text
    margin 1em 0
    display flex
  button
    display block
    width 100%
