.pagination
  list-style-type none
  margin 2em auto
  li
    display inline-block
    border-radius 2px
    text-align center
    vertical-align top
    height 30px
    a
      color #444
      display inline-block
      font-size 1.2rem
      padding 0 10px
      line-height 30px
  li.active
    background-color blue
    a
      color white

.waves-effect:hover
  background-color #ddd
